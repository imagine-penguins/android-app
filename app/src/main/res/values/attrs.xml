<resources>
    <declare-styleable name="states">
        <!-- Idle state -->
        <attr name="initial" format="boolean"/>
        <!-- The building shows one flat and a simple roof -->
        <attr name="looking" format="boolean"/>
        <!-- The building shows two flats and the expanded roof -->
        <attr name="hidding_eyes" format="boolean"/>

        <attr name="email_focus" format="boolean"/>

        <attr name="laughing" format="boolean"/>
    </declare-styleable>
</resources>